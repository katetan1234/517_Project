<h1>New Room</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% render 'form', room: @room %>
    <%= form_for(@room) do |field| %>
        <%= field.label :room_id %>
        <%= field.text_field :room_id %>

        <%= field.label :building %>
        <%= field.select  :building, ["James B. Hunt", "D. H. Hill"] %>

        <%= field.label :size %>
        <%= field.select  :size, [4, 6, 12] %>


        <%= field.submit "Add room", class: "btn btn-primary" %>
    <% end %>


  </div>
</div>

<%= link_to 'Return to manage rooms', admin_manage_room_url %>