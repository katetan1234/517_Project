<h1> Send email notification</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <form action="/dispatch_mail" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= label_tag(:email, "Email id") %>
      <%= text_field_tag(:email) %>
      <%= submit_tag "Send mail",  class: "btn btn-primary" %>
    </form>

  </div>
</div>

<% link_to 'Back to Manage Rooms', user_manage_room_url %>